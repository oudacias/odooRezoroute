<odoo>

    <data noupdate="1">
        <record id="ir_cron_scheduler_recurring_action" model="ir.cron">
            <field name="name">Validate active sessions</field>
            <field name="model_id" ref="pos_session"/>
            <field name="state">code</field>
            <field name="code">model.action_date()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 23:59:00')" />
            <field name="priority">1000</field>
        </record>
    </data>

</odoo>