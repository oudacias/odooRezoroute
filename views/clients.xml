<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_test" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//form//sheet" postion="before"> -->
                <xpath expr="//div[@name='button_box']" postion="inside">
                    <header>
                        <button name="creer_devis" string="Créer un devis" 
                            type="object" class="oe_highlight"/>

                        <button name="creer_ordre_reparation" string="Créer un ordre de réparation" 
                            type="object" class="oe_highlight"/>

                        <button name="get_sale_flotte" string="Devis non facturés" attrs="{'invisible': [('is_flotte', '=', False)]}"
                            type="object" class="oe_highlight"/>

                    </header>
                </xpath>
                
                <field name="website" position="after">

                    <field name="siret"/>
                    <field name="ape"/>
                
                </field>
                <field name="vat" position="after">
                
                    <field name="capital"/>
                    <field name="partner_invoice_id"/>
                    <field name="partner_adress_on_invoice_id" context="{'default_type':'contact','default_parent_id':False,'default_is_company':True,'default_customer':False,'default_supplier':False}"/>
                </field>
                <field name="category_id" position="after">

                    <field name="partner_ref"/>

                    <field name="is_flotte"/>
                    
                
                </field>

            </field>
        </record>

        <record model="ir.ui.view" id="ps_rezoroute.partner">
            <field name="name">ps_rezoroute list</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page name="relance_paiement" string="Relance de paiement">
                        <button string="Envoyer les courriers en retard" type="object"  name="mail_partner_invoice"/>
                        <field name="unpaid_invoices"/>
                    </page>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page string="Avertissement" name="Avertissement">
                        <group>
                            <h4>Avertissement sur les commandes de vente</h4>
                                <field name="sale_warn"/>
                                <field name="sale_warn_msg"
                            attrs="{'required':[('sale_warn','!=', False), ('sale_warn','!=','no-message')], 'invisible':[('sale_warn','in',(False,'no-message'))]}"/>
                            <h4>Avertissement sur les commandes d'achat</h4>
                                <field name="purchase_warn"/>
                                <field name="purchase_warn_msg"
                            attrs="{'required':[('purchase_warn','!=', False), ('purchase_warn','!=','no-message')], 'invisible':[('purchase_warn','in',(False,'no-message'))]}"/>

                            <h4>Avertissement sur les Colisages</h4>
                                <field name="picking_warn"/>
                                <field name="picking_warn_msg"
                            attrs="{'required':[('picking_warn','!=', False), ('picking_warn','!=','no-message')], 'invisible':[('picking_warn','in',(False,'no-message'))]}"/>
                            <h4>Avertissement sur la Facture</h4>
                                <field name="invoice_warn"/>
                                <field name="invoice_warn_msg"
                            attrs="{'required':[('invoice_warn','!=', False), ('invoice_warn','!=','no-message')], 'invisible':[('invoice_warn','in',(False,'no-message'))]}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="res_partner_action_customer_flotte" model="ir.actions.act_window">
            <field name="name">Clients Flottes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company': True, 'default_customer_rank': 1}</field>
            <field name="domain">[('is_flotte','=',True)]</field>
        </record>

        <menuitem id="menu_account_customer2" parent="account.menu_finance_receivables" name="Clients Flottes" action="res_partner_action_customer_flotte" sequence="111"/>

    </data>
</odoo>
