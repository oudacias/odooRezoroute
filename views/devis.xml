<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record model="ir.ui.view" id="ps_rezoroute.partner">
            <field name="name">ps_rezoroute list</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="partner_ref" readonly="1"/>
                    <field name="mobile" />
                    <field name="phone" />

                    <field name="engin_id" domain="[('partner_id','=',partner_id)]" context="{'default_partner_id':'partner_id'}"/>
                    
                    <field name="odometer"/>
                    
                </xpath>
            </field>
        </record>
    </odoo>