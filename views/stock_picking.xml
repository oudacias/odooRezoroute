<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record model="ir.ui.view" id="ps_rezoroute.POS">
            <field name="name">ps_rezoroute POS</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>

            <field name="arch" type="xml">  
                <!-- <xpath expr="//button[@name='311']" position="attributes">
                    <attribute name="groups">ps_rezoroute.group_siege</attribute>
                </xpath>  -->
                <xpath expr="//button[@name='button_scrap']" position="attributes">
                    <attribute name="groups">ps_rezoroute.group_siege</attribute>
                </xpath> 

                <xpath expr="//field[@name='move_ids_without_package']//tree/field[@name='product_uom_qty']" position="after">
                     <field name="confirm_price">1</field>
                </xpath>
                <xpath expr="//field[@name='location_id']" position="after">
                    <!-- <field name="partner_id" on_change="onchange_partner_in(partner_id)" options="{'no_create' : True, 'always_reload' : True}" modifiers="{'readonly': [['state', 'in', ['cancel', 'done']]]}"/> -->
                    <field name="engin_id" domain="[('partner_id', '=', partner_id)]" modifiers="{'readonly': [['state', 'in', ['cancel', 'done']]]}"/>
                    <field name="frais_appro_costs"/>
                   
                    <h4>Valeur du bon</h4>
                        <field name="sale_id" attrs="{'invisible':[('sale_id','=',False)]}" string="Commande client" modifiers="{'invisible': [['sale_id', '=', false]], 'readonly': true}"/>
                        <field name="purchase_id" attrs="{'invisible':[('purchase_id','=',False)]}" string="Commande fournisseur" modifiers="{'invisible': [['purchase_id', '=', false]], 'readonly': true}"/>
                        <field name="amount_product_ht" string="Marchandises HT" modifiers="{'readonly': true}"/>
                        <field name="amount_service_ht" string="Services HT" modifiers="{'readonly': true}"/>

                </xpath>
            </field>
        </record>

        
    </odoo>