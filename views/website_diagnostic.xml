<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="update_diagnostic_template" name="Fiche diagnostic">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="oe_structure">
                    <form role="form" action="/update/diagnostic" method="post">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <table style="border: 0.3px solid black;float:right;width:70%; font-family: Tahoma;position:absolute;margin-left: auto;
  margin-right: auto;">
                            <thead style="background-color:#557EB5;color:white">
                                <th>TÂCHES À EFFECTUER</th>
                                <th>COMMENTAIRE</th>
                                <th>RAPPEL DANS</th>
                                <th>FAIT</th>
                            </thead>
                            <tbody>
                                <t t-foreach="sale_id.engin_diagnostic_sale" t-as="sale_diagnostic_line">
                                    <tr>
                                        <td style="height:70px"><t t-esc="sale_diagnostic_line.name"/></td>
                                        <td><textarea><t t-esc="sale_diagnostic_line.comment"/></textarea></td>
                                        <td><input type="text" name="" t-att-value="sale_diagnostic_line.next_reminder" class="form-control"/></td>
                                        <td><input type="checkbox" name="" t-att-value="sale_diagnostic_line.done" class="form-control"/></td>
                                        
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <!-- <div class="form-group">
                            <label for="sale_order" class="control-label">Numéro du devis</label>
                            <input type="text" name="" t-att-value="sale_id.name" class="form-control"/>
                        </div> -->
                        <div class="clearfix oe_login_buttons">
                            <button type="submit" class="btn btn-primary">Sauvegarder la fiche diagnostic</button>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
