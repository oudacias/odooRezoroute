<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="action_view_diagnostic_form" model="ir.ui.view">
        <field name="name">engin.diagnostic.list</field>
        <field name="model">engin.diagnostic</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="is_default"/>
                    <field name="active"/>
                </group>
                <field name="engin_diagnostic_line">
                    <tree editable="botttom">
                        <field name="sequence"/>
                        <field name="name"/>
                        <field name="description"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>   

    <record id="action_view_diagnostic" model="ir.actions.act_window">
        <field name="name">Diagnostic</field>
        <field name="res_model">engin.diagnostic</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="ps_rezoroute.sale_order_diagnostic_view">
        <field name="name">ps_rezoroute Sale Order View</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">    
            <xpath expr="//page[@name='other_information']" position="after">
                <page string="Fiche diagnostic" name="fiche_diagnostic">
                    <button string="Remplir la fiche diagnostic" type="object" name="update_diagnostic"/>
                    <button string="Ajouter une fiche diagnostic" type="object" name="add_diagnostic"/>
                    <field name="engin_diagnostic_sale">
                        <tree editable="botttom">
                            <field name="name"/>
                            <field name="comment"/>
                            <field name="next_reminder"/>
                            <field name="done"/>
                        </tree>
                    </field>

                </page>
            </xpath>
        </field>
    </record>

    <record id="action_view_diagnostic_wizard_form" model="ir.ui.view">
        <field name="name">engin.diagnostic.wizard</field>
        <field name="model">engin.diagnostic.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="diagnostic_id"/>
                    <field name="sale_id" invisible="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_view_forfait_wizard" model="ir.actions.act_window">
        <field name="name">Forfait Devis</field>
        <field name="res_model">forfait.wizard</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    
    <menuitem id="sub_menu_diagnostic" action="action_view_diagnostic" name="Diagnostic" parent="purchase.menu_purchase_products" sequence="23"/>

</odoo>
