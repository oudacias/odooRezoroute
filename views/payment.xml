<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record model="ir.ui.view" id="ps_rezoroute.payment_register">
            <field name="name">ps_rezoroute Payment Register</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>

            <field name="arch" type="xml"> 
                <xpath expr="//field[@name='amount']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath> 
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <!-- <group> -->
                        <field name="is_cash"  invisible="1"/>
                        <field name="cash_amount"  attrs="{'invisible': [('is_cash', '=', False)]}" />
                        <field name="cash_amount_residual" readonly="1" attrs="{'invisible': [('is_cash', '=', False)]}"/>

                    <!-- </group> -->

                </xpath>
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <!-- <group> -->
                        <field name="is_cheque"  invisible="1"/>
                        <field name="cheque_titulaire"  attrs="{'required': [('journal_id.name','=like','ChÃ¨que%')]}" />

                    <!-- </group> -->

                </xpath>
            </field>
        </record>
    </odoo>
