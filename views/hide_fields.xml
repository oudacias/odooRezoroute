            <field name="groups_id" eval="[(6,0,[ref('ps_rezoroute.group_achat')])]"/>
        </record>
        <record model="ir.ui.menu" id="sale.menu_sale_report">
            <field name="groups_id" eval="[(6,0,[ref('ps_rezoroute.group_achat')])]"/>
        </record>
        <record model="ir.ui.menu" id="point_of_sale.menu_point_config_product">
            <field name="groups_id" eval="[(6,0,[ref('ps_rezoroute.group_achat')])]"/>
        </record>
        <record model="ir.ui.menu" id="point_of_sale.menu_point_rep">
            <field name="groups_id" eval="[(6,0,[ref('ps_rezoroute.group_achat')])]"/>
        </record>
        <record model="ir.ui.menu" id="account.menu_finance">
            <field name="groups_id" eval="[(6,0,[ref('ps_rezoroute.group_achat')])]"/>
        </record>
        <record model="ir.ui.menu" id="utm.menu_link_tracker_root">
            <field name="groups_id" eval="[(6,0,[ref('ps_rezoroute.group_achat')])]"/>
