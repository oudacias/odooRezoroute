<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record model="ir.ui.view" id="ps_rezoroute.calendar_events_view">
            <field name="name">ps_rezoroute Calendar View</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">    
                <!-- <xpath expr="//page[@name='page_details']"  postion="inside"> -->
                <xpath expr="//field[@name='description']"  postion="after">
                    <group>
                        <field name="sale_id"/>
                        <field name="engin_id"/>
                    </group>
                </xpath>
            </field>
        </record>
    </odoo>