<?xml version="1.0" encoding="utf-8"?>
    <odoo>

       <template id="report_xcaisse">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- <div class="header" style="top:1450pt"> -->
                        <!-- <div class="row"> -->
                            <!-- <td align="center" valign="center">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height:45pt;max-width:90%;margin-top:-20pt" alt="Company Logo"/>
                            </td> -->
                        <!-- </div>
                    </div> -->
                        <div class="page">
                            <div class="row" id="hash_header">
                                <div class="col-6">
                                    <br/>
                                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height:45pt;max-width:90%;margin-top:-20pt" alt="Company Logo"/>
                                        <br/>
                                        <span t-field="o.company_id.partner_id.name"/>
                                        <br/>
                                        <span t-field="o.company_id.street"/>
                                        <br/>
                                        <span>Tel :</span><span t-field="o.company_id.phone"/>
                                        <br/>
                                    <br/>
                                </div>
                                <div class="col-6">
                                    <br/>
                                        <span   > X de caisse : </span> <span t-field="o.name"/>
                                        <br/>
                                        <span   > Responsable : </span> <span t-field="o.user_id.name"/>
                                        <br/>
                                        <span   > Ouverture : </span> <span t-field="o.start_at"/>
                                        <br/>
                                        <span   > Fermeture : </span> <span t-field="o.stop_at"/>
                                        <br/>
                                        <span   > Validation : </span> <span t-field="o.date_validation"/>
                                    <br/>
                                </div>
                            </div>
                        </div>

                    
                        <span><span t-field="o.company_id.name"/></span>
                         
                        <table class="table table-bordered" style="border-bottom: 1px solid black !important;width: 100%;display: grid;">
                                <tr>
                                  <th style="text-align: left;">
                                    <span   > Date </span>
                                  </th>
                                  <th style="text-align: left;">
                                    <span   > Num Facture </span>
                                  </th>
                                <!-- <th style="text-align: left;">
                                    <span   > N° Client </span>
                                </th> -->
                                <th style="text-align: left;">
                                    <span   > Nom du Client </span>
                                </th>
                                <th style="text-align: left;">
                                    <span   > Num de reglement </span>
                                </th>
                                <th style="text-align: left;">
                                    <span   > Type de reglement  </span>
                                </th>
                                <th style="text-align: left;">
                                    <span   > Echéance  </span>
                                </th>
                                <th style="text-align: left;">
                                    <span   > Montant (MAD)  </span>
                                </th>
                                </tr>
                                <t t-set="test_variable" t-value="0"/>
                                <t t-foreach="o.reglement_id" t-as="reg">
                                    <tr  >
                                        <td> 
                                            <span t-field="reg.date"/>
                                        </td>
                                        <td> 
                                            <span t-field="reg.ref"/>
                                        </td>
                                        <td> 
                                            <span t-field="reg.partner_id.name"/>
                                        </td>
                                        <td> 
                                            <span t-field="reg.name"/>
                                        </td>
                                        <td> 
                                            <span t-field="reg.journal_id.name"/>
                                        </td>
                                        <td> 
                                            <span t-field="reg.date"/>
                                        </td>
                                        <td> 
                                            <span t-field="reg.amount"/>
                                            <t t-set="test_variable" t-value="test_variable+reg.amount"/> 
                                        </td>
                                         
                                    </tr>
                                    
                                </t>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><h5>Total</h5></td>
                                    <td><h5><t t-esc="test_variable"/></h5></td>
                                    </tr>
                                
                            </table>
                        
                        
                    </t>
                </t>
        </template>

    </odoo>