<?xml version="1.0" ?>
<odoo>

    <data>
        <record id="email_template_name" model="mail.template">
            <field name="name">Patient Card: Send by email</field>
            <field name="model_id" ref="ps_rezoroute.model_res_partner"/>
            <field name="email_from">houdalemkiri@gmail.com</field>
            <field name="email_to">{{ object.partner_id.id }}</field>
            <field name="subject">Patient Card (Ref ${object.name_seq})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear 
                        <br /><br />
                        Here is your patient card with reference 
                        <br /><br />
                        Age : 
                        Contact Number : 
                        <br /><br />
                        If you have queries feel free to ask.
                    </p>
                </div>
            </field>
            <!-- <field name="report_template" ref="report_patient_card"/> -->
            <field name="report_name">Patient Card</field>
        </record>
    </data>

</odoo>