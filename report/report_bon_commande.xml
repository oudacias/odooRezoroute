<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record id="report_bon_commande" model="ir.actions.report">
            <field name="name">Bon de Commande</field>

            <field name="model">purchase.order</field>

            <field name="report_type">qweb-pdf</field>

            <field name="report_name">ps_rezoroute.report_bon_commande_template</field>

            <field name="report_file">ps_rezoroute.report_bon_commande_template</field>
            <field name="print_report_name">
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))</field>


            <field name="binding_type">report</field>

            <field name="binding_model_id" ref="model_purchase_order"/>

        </record>
    </odoo>